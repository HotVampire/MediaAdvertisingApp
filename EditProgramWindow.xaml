<Window x:Class="MediaAdvertisingApp.EditProgramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование программы" Height="400" Width="300">
    <ScrollViewer>
        <StackPanel Margin="10">
            <Label Content="Название программы"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <Label Content="Рейтинг"/>
            <TextBox x:Name="RatingTextBox" Margin="0,0,0,10"/>

            <Label Content="Время рекламных блоков"/>
            <TextBox x:Name="AdBlocksTimeTextBox" Margin="0,0,0,10"/>

            <Label Content="Стоимость минуты"/>
            <TextBox x:Name="CostPerMinuteTextBox" Margin="0,0,0,10"/>

            <Button Content="Сохранить" Click="SaveChanges_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Window>
