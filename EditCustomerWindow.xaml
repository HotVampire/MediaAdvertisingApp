<Window x:Class="MediaAdvertisingApp.EditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заказчика" Height="400" Width="300">
    <ScrollViewer>
        <StackPanel Margin="10">
            <Label Content="Название компании"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <Label Content="Длительность рекламы"/>
            <TextBox x:Name="DurationTextBox" Margin="0,0,0,10"/>

            <Label Content="Банковские реквизиты"/>
            <TextBox x:Name="BankDetailsTextBox" Margin="0,0,0,10"/>

            <Label Content="Контактный телефон"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10"/>

            <Label Content="Контактное лицо"/>
            <TextBox x:Name="ContactPersonTextBox" Margin="0,0,0,10"/>

            <Button Content="Сохранить" Click="SaveChanges_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Window>
